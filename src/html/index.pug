    title UpperHand
    meta(name="description" content="囲碁に似た雰囲気の陣とりゲーム")
    link(rel="icon" type="image/png" href="icon.png")
    link(rel="apple-touch-icon" type="image/png" href="icon.png")
    link(rel="stylesheet" type="text/css" href=`upperhand-${version}.css`)
